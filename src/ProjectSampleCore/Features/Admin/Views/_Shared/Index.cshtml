@using System.Collections
@using System.Linq
@using ProjectSampleCore.Infrastructure.Mvc.Extensions
@model ProjectSampleCore.Infrastructure.Mvc.Models.EntityIndexModel

<h2>Index - @ViewBag.EntityType</h2>

<div class="row">
    <div class="col-md-8">
        <p>
            @await Html.PartialAsync("IndexActions")
        </p>
    </div>
</div>

@section scripts {
    @{Html.RenderPartial("IndexScripts");}
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-responsive table-bordered">
            <tr>
                @foreach (var header in Model.Headers)
                {
                    <th>@header</th>
                }
                <th>Actions</th>
            </tr>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    @await Html.DisplayTemplateFor(item)
                }
            </tbody>
        </table>
    </div>
</div>
